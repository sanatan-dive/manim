generator client {
  provider = "prisma-client-py"
  interface = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id            String   @id @default(uuid())
  title         String?  // Optional title for the animation
  prompt        String
  status        String   @default("pending")
  videoUrl      String?  @map("video_url")
  s3Key         String?  @map("s3_key")
  duration      Float?   // Duration in seconds
  errorMessage  String?  @map("error_message")
  executionLog  String?  @map("execution_log")
  generatedCode String?  @map("generated_code")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  userId        String?  @map("user_id")
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  conversationId String? @map("conversation_id")
  conversation   Conversation? @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([createdAt])
  @@index([userId])
  @@map("jobs")
}

model User {
  id              String   @id @default(uuid())
  clerkId         String?  @unique @map("clerk_id")  // ID from Clerk
  email           String   @unique
  name            String?
  apiKey          String?  @unique @map("api_key")
  credits         Int      @default(3)              // Default free credits
  generationCount Int      @default(0) @map("generation_count")
  plan            String   @default("free")          // free, pro, etc.
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  jobs            Job[]
  conversations   Conversation[]
  
  @@map("users")
}

model Conversation {
  id        String   @id @default(uuid())
  title     String
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobs Job[]

  @@index([userId])
  @@map("conversations")
}